<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PoliticaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Título principal en negrita y color -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Política"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#00a4b7" />

        <!-- Título secundario con tamaño reducido -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elecciones EEUU"
            android:textSize="28sp"
            android:textColor="#00a4b7"
            android:paddingTop="12dp" />

        <!-- Descripción del artículo -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva encuesta muestra el respaldo de los votantes latinos a Harris en Pennsylvania..."
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/eleccioneusa"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <!-- Otro título con tamaño reducido -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guerra en Gaza: Más de 50 niños mueren tras ataque de Israel contra Gaza"
            android:textSize="28sp"
            android:textColor="#00a4b7"
            android:paddingTop="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Más de 50 niños han muerto por los bombardeos israelíes en el norte de Gaza..."
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/guerracaza"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <!-- Otro título con tamaño reducido -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La Inflación de Honduras en Octubre fue negativa en 0.005 % según el Banco Central"
            android:textSize="28sp"
            android:textColor="#00a4b7"
            android:paddingTop="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La inflación de Honduras en octubre fue negativa en 0.05 %, mostrando una reducción mensual..."
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/inflacionhonduras"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <!-- Otro título con tamaño reducido -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Irán podría implicar a su ejército en un ataque contra Israel"
            android:textSize="28sp"
            android:textColor="#00a4b7"
            android:paddingTop="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Irán advirtió de un ataque de represalia fuerte y complejo contra Israel..."
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ataqueiraniisrael"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

        <!-- Otro título con tamaño reducido -->
        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zelenski está 'agotado y estresado'"
            android:textSize="28sp"
            android:textColor="#00a4b7"
            android:paddingTop="12dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los éxitos militares de Moscú y la incertidumbre sobre las elecciones en EE.UU..."
            android:textSize="20sp"
            android:paddingTop="8dp" />

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/zelensky"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
